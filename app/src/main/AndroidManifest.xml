<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".ShopUApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShopU"
        tools:targetApi="31">
        <activity
            android:name=".ui.verification.VerificationEmail"
            android:exported="false" />
        <activity
            android:name=".ui.confirmationRecoverPassword.ConfirmationRecoverPassword"
            android:exported="false" />
        <activity
            android:name=".ui.newPassword.NewPassword"
            android:exported="false" />
        <activity
            android:name=".ui.forgetPassword.ForgetPassword"
            android:exported="false" />
        <activity
            android:name=".ui.verificationRegister.VerificationRegister"
            android:exported="false" />
        <activity
            android:name=".ui.principal.Principal"
            android:exported="false" />
        <activity
            android:name=".ui.login.Login"
            android:exported="false" />
        <activity
            android:name=".ui.register.Register"
            android:exported="false" />
        <activity
            android:name=".ui.welcome.Welcome"
            android:exported="true"
            android:theme="@style/Theme.ShopU">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>