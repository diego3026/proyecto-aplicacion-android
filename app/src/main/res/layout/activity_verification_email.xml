<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:weightSum="1"
    android:gravity="center"
    tools:context=".ui.verification.VerificationEmail">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.3"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_verification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/verification_text_register"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:textAlignment="center"
        android:textColor="@color/black"/>

    <Button
        android:id="@+id/btn_verification"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:visibility="invisible"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/inter_regular"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:background="@drawable/boton_naranja_redondo"
        android:text="@string/verification_button_new_password" />


</LinearLayout>